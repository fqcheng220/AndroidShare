<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/btn_show_dialog"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toTopOf="parent"
      android:text="弹dialog"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/btn_show_dialog_view"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/btn_show_dialog"
      android:text="弹dialog（view实现）"/>

  <TextView
      android:id="@+id/tv_test_multi_set_text1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="多次更新text"
      android:layout_marginTop="10dp"
      android:padding="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btn_show_dialog_view"
      />
  <TextView
      android:id="@+id/tv_test_multi_set_text2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="多次更新text(post形式)"
      android:layout_marginTop="10dp"
      android:padding="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_test_multi_set_text1"
      />

</androidx.constraintlayout.widget.ConstraintLayout>